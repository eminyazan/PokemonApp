<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!-- data binding pokemon model -->
    <data>
        <variable
            name="pokemon"
            type="com.example.eminyazanpokemon.model.PokemonModel" />
    </data>

    <LinearLayout



        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        tools:context=".view.PokemonDetailFragment"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ivWindowPokemonImage"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="image" />

        <TextView
            android:id="@+id/tvDetailPokemonName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@{pokemon.name}"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDetailPokemonHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@{pokemon.height}"
            android:textSize="25sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvDetailPokemonWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@{pokemon.weight}"
            android:textSize="25sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnDetailOpenWindow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{`Show ` + pokemon.name + ` in window`}"
            android:textSize="19sp"
            android:textStyle="normal" />

    </LinearLayout>
</layout>
